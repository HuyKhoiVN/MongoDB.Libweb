            this.clearUserId();
            this.clearUserInfo();
        },

        // Common API methods
        async get(url) {
            return this.request(url, { method: 'GET' });
        },

        async post(url, data) {
            return this.request(url, { method: 'POST', body: data });
        },

        async put(url, data) {
            return this.request(url, { method: 'PUT', body: data });
        },

