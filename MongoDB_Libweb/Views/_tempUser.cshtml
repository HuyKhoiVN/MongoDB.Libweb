@* This is a user-specific template for the Electronic Library System based on template.cshtml *@
@* Following the design rules from template_description.md with modern, youthful, and vibrant styling *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Electronic Library</title>
    <link rel="stylesheet" href="~/template/template.css">
    <script src="~/template/template.js" defer></script>
    <style>
        /* Additional user-specific styles following template_description.md rules */
        .user-header {
            background: linear-gradient(135deg, #FF6B00, #FF8C00);
            color: white;
            padding: 20px 0;
            box-shadow: 0 4px 20px rgba(255, 107, 0, 0.2);
        }
        
        .user-nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        
        .user-info {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: #FFDAB9;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: #FF6B00;
        }
        
        .user-stats {
            background: #F5F5F5;
            padding: 40px 0;
            margin: 20px 0;
        }
        
        .user-stat-card {
            background: white;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            text-align: center;
            transition: transform 0.3s ease;
        }
        
        .user-stat-card:hover {
            transform: translateY(-5px);
        }
        
        .user-stat-number {
            font-size: 48px;
            font-weight: bold;
            color: #FF6B00;
            margin: 10px 0;
        }
        
        .user-actions {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }
        
        .btn-user {
            background: #FF6B00;
            color: white;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            font-weight: bold;
            text-decoration: none;
            display: inline-block;
            transition: all 0.3s ease;
        }
        
        .btn-user:hover {
            background: #FF4500;
            transform: scale(1.05);
            color: white;
            text-decoration: none;
        }
        
        .btn-secondary {
            background: transparent;
            color: #FF6B00;
            border: 2px solid #FF6B00;
        }
        
        .btn-secondary:hover {
            background: #FF6B00;
            color: white;
        }
        
        .user-content {
            background: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            margin: 20px 0;
        }
        
        .welcome-message {
            font-size: 24px;
            color: #333;
            margin-bottom: 20px;
        }
        
        .quick-actions {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin: 30px 0;
        }
        
        .action-card {
            background: linear-gradient(135deg, #FFDAB9, #FFE4B5);
            padding: 25px;
            border-radius: 12px;
            text-align: center;
            transition: all 0.3s ease;
            cursor: pointer;
        }
        
        .action-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(255, 107, 0, 0.2);
        }
        
        .action-icon {
            font-size: 48px;
            margin-bottom: 15px;
        }
        
        .action-title {
            font-size: 18px;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }
        
        .action-description {
            color: #666;
            font-size: 14px;
        }
        
        @@media (max-width: 768px) {
            .user-nav {
                flex-direction: column;
                gap: 20px;
            }
            
            .user-actions {
                justify-content: center;
            }
            
            .welcome-message {
                font-size: 20px;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    @* User-specific Header *@
    <header class="user-header">
        <div class="container">
            <div class="user-nav">
                <div class="logo">ELIB</div>
                <div class="user-info">
                    <div class="user-avatar">
                        @(User.Identity?.Name?.Substring(0, 1).ToUpper() ?? "U")
                    </div>
                    <div>
                        <div style="font-weight: bold;">@(User.Identity?.Name ?? "User")</div>
                        <div style="font-size: 12px; opacity: 0.8;">Library Member</div>
                    </div>
                </div>
                <div class="user-actions">
                    <a href="/books" class="btn-user">Browse Books</a>
                    <a href="/borrows" class="btn-user btn-secondary">My Borrows</a>
                    <a href="/account" class="btn-user btn-secondary">Account</a>
                </div>
            </div>
        </div>
    </header>

    <main>
        @* User Welcome Section *@
        <section class="user-content">
            <div class="container">
                <h1 class="welcome-message">Welcome back, @(User.Identity?.Name ?? "User")!</h1>
                <p style="color: #666; font-size: 16px; margin-bottom: 30px;">
                    Discover your next great read and manage your library experience.
                </p>
                
                @* Quick Actions Grid *@
                <div class="quick-actions">
                    <div class="action-card" onclick="location.href='/books'">
                        <div class="action-icon">üìö</div>
                        <div class="action-title">Browse Books</div>
                        <div class="action-description">Explore our collection of digital books</div>
                    </div>
                    <div class="action-card" onclick="location.href='/borrows'">
                        <div class="action-icon">üìñ</div>
                        <div class="action-title">My Borrows</div>
                        <div class="action-description">View your current and past borrows</div>
                    </div>
                    <div class="action-card" onclick="location.href='/categories'">
                        <div class="action-icon">üè∑Ô∏è</div>
                        <div class="action-title">Categories</div>
                        <div class="action-description">Browse books by category</div>
                    </div>
                    <div class="action-card" onclick="location.href='/account'">
                        <div class="action-icon">‚öôÔ∏è</div>
                        <div class="action-title">Account Settings</div>
                        <div class="action-description">Manage your profile and preferences</div>
                    </div>
                </div>
            </div>
        </section>

        @* User Stats Section *@
        <section class="user-stats">
            <div class="container">
                <h2 style="text-align: center; margin-bottom: 40px; color: #333;">Your Library Activity</h2>
                <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">
                    <div class="user-stat-card">
                        <div class="user-stat-number">@(ViewBag.BorrowedBooks ?? "0")</div>
                        <p>Books Borrowed</p>
                    </div>
                    <div class="user-stat-card">
                        <div class="user-stat-number">@(ViewBag.CurrentBorrows ?? "0")</div>
                        <p>Currently Reading</p>
                    </div>
                    <div class="user-stat-card">
                        <div class="user-stat-number">@(ViewBag.FavoriteCategories ?? "0")</div>
                        <p>Favorite Categories</p>
                    </div>
                    <div class="user-stat-card">
                        <div class="user-stat-number">@(ViewBag.ReadingStreak ?? "0")</div>
                        <p>Day Reading Streak</p>
                    </div>
                </div>
            </div>
        </section>

        @* Main Content Area - Render child views here *@
        <div class="container content">
            @RenderBody()
        </div>

        @* Recent Activity Section *@
        <section class="user-content">
            <div class="container">
                <h2 style="margin-bottom: 30px; color: #333;">Recent Activity</h2>
                <div style="background: #F5F5F5; padding: 20px; border-radius: 8px; border-left: 4px solid #FF6B00;">
                    <p style="margin: 0; color: #666;">
                        <strong>Last Login:</strong> @DateTime.Now.ToString("MMMM dd, yyyy 'at' h:mm tt")<br>
                        <strong>Member Since:</strong> @(ViewBag.MemberSince ?? "Recently")<br>
                        <strong>Last Book Borrowed:</strong> @(ViewBag.LastBorrowedBook ?? "None yet")
                    </p>
                </div>
            </div>
        </section>
    </main>

    <footer class="footer">
        <div class="container">
            <div style="display: flex; justify-content: space-between; align-items: center; flex-wrap: wrap; gap: 20px;">
                <p style="margin: 0;">&copy; 2025 Electronic Library. All rights reserved.</p>
                <div style="display: flex; gap: 20px;">
                    <a href="/help" style="color: #FF6B00; text-decoration: none;">Help</a>
                    <a href="/contact" style="color: #FF6B00; text-decoration: none;">Contact</a>
                    <a href="/privacy" style="color: #FF6B00; text-decoration: none;">Privacy</a>
                </div>
            </div>
        </div>
    </footer>

    <script>
        // User-specific JavaScript functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Add smooth scrolling for better UX
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });

            // Add hover effects to action cards
            document.querySelectorAll('.action-card').forEach(card => {
                card.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px)';
                });
                
                card.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0)';
                });
            });

            // Add loading animation for buttons
            document.querySelectorAll('.btn-user').forEach(button => {
                button.addEventListener('click', function(e) {
                    if (!this.href.includes('#')) {
                        this.style.opacity = '0.7';
                        this.style.transform = 'scale(0.95)';
                    }
                });
            });
        });
    </script>
</body>
</html>
